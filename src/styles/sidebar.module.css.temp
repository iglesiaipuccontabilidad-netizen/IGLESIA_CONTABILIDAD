.sidebar {
  display: flex;
  flex-direction: column;
  width: 260px;
  height: 100vh;
  background: linear-gradient(180deg, #1a1a1a 0%, #2d2d2d 100%);
  color: #ffffff;
  padding: 1rem;
  transition: width 0.3s ease;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 50;
}

.sidebar.collapsed {
  width: 78px;
}

.logo {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 1rem 0;
  margin-bottom: 2rem;
}

.logoText {
  font-size: 1.5rem;
  font-weight: bold;
  color: #ffffff;
}

.navigation {
  flex: 1;
  overflow-y: auto;
  scrollbar-width: thin;
  scrollbar-color: #666666 transparent;
}

.navigation::-webkit-scrollbar {
  width: 6px;
}

.navigation::-webkit-scrollbar-track {
  background: transparent;
}

.navigation::-webkit-scrollbar-thumb {
  background-color: #666666;
  border-radius: 3px;
}

.navSection {
  display: block;
  color: #888888;
  font-size: 0.75rem;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  padding: 0.75rem 0.5rem;
}

.navList {
  list-style: none;
  padding: 0;
  margin: 0 0 1.5rem 0;
}

.navItem {
  margin: 0.25rem 0;
}

.navLink {
  display: flex;
  align-items: center;
  padding: 0.75rem 1rem;
  color: #d1d1d1;
  text-decoration: none;
  border-radius: 0.5rem;
  transition: all 0.2s ease;
  gap: 1rem;
}

.navLink:hover {
  background: rgba(255, 255, 255, 0.1);
  color: #ffffff;
}

.navLink.active {
  background: rgba(255, 255, 255, 0.1);
  color: #ffffff;
  font-weight: 500;
  position: relative;
}

.navLink.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 3px;
  height: 60%;
  background: #3b82f6;
  border-radius: 0 3px 3px 0;
}

.icon {
  width: 20px;
  height: 20px;
  min-width: 20px;
  color: currentColor;
}

.subNavList {
  list-style: none;
  padding-left: 2.75rem;
  margin: 0.5rem 0;
}

.subNavLink {
  display: block;
  padding: 0.5rem 1rem;
  color: #a1a1a1;
  text-decoration: none;
  font-size: 0.875rem;
  border-radius: 0.375rem;
  transition: all 0.2s ease;
}

.subNavLink:hover {
  color: #ffffff;
  background: rgba(255, 255, 255, 0.05);
}

.subNavLink.active {
  color: #ffffff;
  font-weight: 500;
}

.toggleButton {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  margin: 1rem auto 0;
  padding: 0;
  border: none;
  background: rgba(255, 255, 255, 0.1);
  color: #ffffff;
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.2s ease;
}

.toggleButton:hover {
  background: rgba(255, 255, 255, 0.2);
}

/* Media query para dispositivos m√≥viles */
@media (max-width: 768px) {
  .sidebar {
    transform: translateX(-100%);
    position: fixed;
  }
  
  .sidebar.collapsed {
    transform: translateX(0);
    width: 78px;
  }
  
  body.sidebar-open .sidebar {
    transform: translateX(0);
  }
}